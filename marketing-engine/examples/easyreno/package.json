{
  "name": "easyreno-marketing",
  "version": "1.0.0",
  "description": "B2B lead generation and local marketing automation for contractors",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/templates dist/",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "migrate": "node dist/database/migrate.js",
    "seed": "node dist/database/seed.js",
    "docker:build": "docker build -t easyreno-marketing .",
    "docker:run": "docker-compose up -d",
    "k8s:deploy": "kubectl apply -f k8s/",
    "gmb:sync": "node dist/scripts/gmb-sync.js",
    "reviews:monitor": "node dist/scripts/review-monitor.js"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.3.42",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^7.100.1",
    "@turf/turf": "^6.5.0",
    "birdeye": "^1.0.0",
    "bullmq": "^5.1.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dd-trace": "^4.25.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^131.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.26.1",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "postgis": "^0.0.1",
    "prom-client": "^15.1.0",
    "twilio": "^4.21.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yelp-fusion": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}