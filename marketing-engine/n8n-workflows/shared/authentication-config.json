{
  "credentials": {
    "postgres": {
      "id": "1",
      "name": "Marketing DB",
      "type": "postgres",
      "data": {
        "host": "{{ $env.POSTGRES_HOST }}",
        "port": 5432,
        "database": "{{ $env.POSTGRES_DATABASE }}",
        "user": "{{ $env.POSTGRES_USER }}",
        "password": "{{ $env.POSTGRES_PASSWORD }}",
        "ssl": {
          "mode": "require",
          "ca": "{{ $env.POSTGRES_SSL_CA }}",
          "cert": "{{ $env.POSTGRES_SSL_CERT }}",
          "key": "{{ $env.POSTGRES_SSL_KEY }}"
        },
        "connectionPooling": true,
        "poolSize": 10
      }
    },
    "facebookOAuth2Api": {
      "id": "2",
      "name": "Facebook Marketing",
      "type": "facebookOAuth2Api",
      "data": {
        "clientId": "{{ $env.FACEBOOK_CLIENT_ID }}",
        "clientSecret": "{{ $env.FACEBOOK_CLIENT_SECRET }}",
        "accessToken": "{{ $env.FACEBOOK_ACCESS_TOKEN }}",
        "adAccountId": "{{ $env.FACEBOOK_AD_ACCOUNT_ID }}",
        "pageId": "{{ $env.FACEBOOK_PAGE_ID }}"
      }
    },
    "twitterOAuth2Api": {
      "id": "3",
      "name": "Twitter Marketing",
      "type": "twitterOAuth2Api",
      "data": {
        "clientId": "{{ $env.TWITTER_CLIENT_ID }}",
        "clientSecret": "{{ $env.TWITTER_CLIENT_SECRET }}",
        "bearerToken": "{{ $env.TWITTER_BEARER_TOKEN }}"
      }
    },
    "linkedInOAuth2Api": {
      "id": "4",
      "name": "LinkedIn Marketing",
      "type": "linkedInOAuth2Api",
      "data": {
        "clientId": "{{ $env.LINKEDIN_CLIENT_ID }}",
        "clientSecret": "{{ $env.LINKEDIN_CLIENT_SECRET }}",
        "organizationUrn": "{{ $env.LINKEDIN_ORG_URN }}"
      }
    },
    "instagramOAuth2Api": {
      "id": "5",
      "name": "Instagram Marketing",
      "type": "instagramOAuth2Api",
      "data": {
        "accessToken": "{{ $env.INSTAGRAM_ACCESS_TOKEN }}",
        "businessAccountId": "{{ $env.INSTAGRAM_BUSINESS_ACCOUNT_ID }}"
      }
    },
    "slackApi": {
      "id": "6",
      "name": "Marketing Slack",
      "type": "slackApi",
      "data": {
        "accessToken": "{{ $env.SLACK_BOT_TOKEN }}",
        "webhookUrl": "{{ $env.SLACK_WEBHOOK_URL }}"
      }
    },
    "salesforceOAuth2Api": {
      "id": "7",
      "name": "Salesforce CRM",
      "type": "salesforceOAuth2Api",
      "data": {
        "clientId": "{{ $env.SALESFORCE_CLIENT_ID }}",
        "clientSecret": "{{ $env.SALESFORCE_CLIENT_SECRET }}",
        "accessToken": "{{ $env.SALESFORCE_ACCESS_TOKEN }}",
        "refreshToken": "{{ $env.SALESFORCE_REFRESH_TOKEN }}",
        "environment": "{{ $env.SALESFORCE_ENVIRONMENT }}",
        "domain": "{{ $env.SALESFORCE_DOMAIN }}"
      }
    },
    "hubspotOAuth2Api": {
      "id": "8",
      "name": "HubSpot Marketing",
      "type": "hubspotOAuth2Api",
      "data": {
        "clientId": "{{ $env.HUBSPOT_CLIENT_ID }}",
        "clientSecret": "{{ $env.HUBSPOT_CLIENT_SECRET }}",
        "accessToken": "{{ $env.HUBSPOT_ACCESS_TOKEN }}",
        "refreshToken": "{{ $env.HUBSPOT_REFRESH_TOKEN }}"
      }
    },
    "sendGridApi": {
      "id": "9",
      "name": "SendGrid Marketing",
      "type": "sendGridApi",
      "data": {
        "apiKey": "{{ $env.SENDGRID_API_KEY }}"
      }
    },
    "redis": {
      "id": "10",
      "name": "Marketing Redis",
      "type": "redis",
      "data": {
        "host": "{{ $env.REDIS_HOST }}",
        "port": 6379,
        "password": "{{ $env.REDIS_PASSWORD }}",
        "database": 0,
        "ssl": true
      }
    },
    "googleAnalyticsOAuth2": {
      "id": "11",
      "name": "Google Analytics",
      "type": "googleAnalyticsOAuth2",
      "data": {
        "clientId": "{{ $env.GOOGLE_CLIENT_ID }}",
        "clientSecret": "{{ $env.GOOGLE_CLIENT_SECRET }}",
        "accessToken": "{{ $env.GOOGLE_ACCESS_TOKEN }}",
        "refreshToken": "{{ $env.GOOGLE_REFRESH_TOKEN }}",
        "viewId": "{{ $env.GOOGLE_ANALYTICS_VIEW_ID }}"
      }
    },
    "googleAdsOAuth2": {
      "id": "12",
      "name": "Google Ads",
      "type": "googleAdsOAuth2",
      "data": {
        "clientId": "{{ $env.GOOGLE_ADS_CLIENT_ID }}",
        "clientSecret": "{{ $env.GOOGLE_ADS_CLIENT_SECRET }}",
        "accessToken": "{{ $env.GOOGLE_ADS_ACCESS_TOKEN }}",
        "refreshToken": "{{ $env.GOOGLE_ADS_REFRESH_TOKEN }}",
        "developerToken": "{{ $env.GOOGLE_ADS_DEVELOPER_TOKEN }}",
        "customerId": "{{ $env.GOOGLE_ADS_CUSTOMER_ID }}"
      }
    },
    "httpHeaderAuth": {
      "id": "13",
      "name": "Webhook Authentication",
      "type": "httpHeaderAuth",
      "data": {
        "name": "X-API-Key",
        "value": "{{ $env.WEBHOOK_API_KEY }}"
      }
    }
  },
  "environment_variables": {
    "required": [
      "POSTGRES_HOST",
      "POSTGRES_DATABASE",
      "POSTGRES_USER",
      "POSTGRES_PASSWORD",
      "REDIS_HOST",
      "REDIS_PASSWORD",
      "WEBHOOK_API_KEY",
      "MONITORING_URL",
      "DASHBOARD_URL",
      "DASHBOARD_API_URL"
    ],
    "platform_specific": {
      "facebook": [
        "FACEBOOK_CLIENT_ID",
        "FACEBOOK_CLIENT_SECRET",
        "FACEBOOK_ACCESS_TOKEN",
        "FACEBOOK_AD_ACCOUNT_ID",
        "FACEBOOK_PAGE_ID"
      ],
      "twitter": [
        "TWITTER_CLIENT_ID",
        "TWITTER_CLIENT_SECRET",
        "TWITTER_BEARER_TOKEN"
      ],
      "linkedin": [
        "LINKEDIN_CLIENT_ID",
        "LINKEDIN_CLIENT_SECRET",
        "LINKEDIN_ORG_URN"
      ],
      "instagram": [
        "INSTAGRAM_ACCESS_TOKEN",
        "INSTAGRAM_BUSINESS_ACCOUNT_ID"
      ],
      "google": [
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_ACCESS_TOKEN",
        "GOOGLE_REFRESH_TOKEN",
        "GOOGLE_ANALYTICS_VIEW_ID",
        "GOOGLE_ADS_CLIENT_ID",
        "GOOGLE_ADS_CLIENT_SECRET",
        "GOOGLE_ADS_ACCESS_TOKEN",
        "GOOGLE_ADS_REFRESH_TOKEN",
        "GOOGLE_ADS_DEVELOPER_TOKEN",
        "GOOGLE_ADS_CUSTOMER_ID"
      ],
      "email": [
        "SENDGRID_API_KEY"
      ],
      "crm": [
        "SALESFORCE_CLIENT_ID",
        "SALESFORCE_CLIENT_SECRET",
        "SALESFORCE_ACCESS_TOKEN",
        "SALESFORCE_REFRESH_TOKEN",
        "SALESFORCE_ENVIRONMENT",
        "SALESFORCE_DOMAIN",
        "HUBSPOT_CLIENT_ID",
        "HUBSPOT_CLIENT_SECRET",
        "HUBSPOT_ACCESS_TOKEN",
        "HUBSPOT_REFRESH_TOKEN"
      ],
      "communication": [
        "SLACK_BOT_TOKEN",
        "SLACK_WEBHOOK_URL"
      ]
    }
  },
  "security": {
    "rate_limiting": {
      "webhook_requests_per_minute": 60,
      "api_requests_per_minute": 100,
      "burst_limit": 200
    },
    "ip_whitelist": {
      "enabled": true,
      "allowed_ips": [
        "{{ $env.ALLOWED_IPS }}"
      ]
    },
    "encryption": {
      "credentials_encryption": "AES-256-GCM",
      "data_in_transit": "TLS 1.3",
      "data_at_rest": "AES-256"
    },
    "authentication": {
      "webhook_auth_type": "api_key",
      "api_key_rotation_days": 90,
      "oauth_token_refresh": "automatic"
    }
  }
}