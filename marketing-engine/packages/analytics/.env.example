# Database Configuration
DATABASE_URL=postgresql://analytics_user:analytics_pass@localhost:5432/marketing_analytics
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT_MILLIS=10000
DATABASE_CONNECTION_TIMEOUT_MILLIS=3000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CLUSTER_NODES=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=analytics:
REDIS_STREAM_KEY=analytics:events
REDIS_STREAM_CONSUMER_GROUP=analytics-consumers

# Google Analytics 4
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your_ga4_api_secret
GA4_PROPERTY_ID=properties/XXXXXXXXX
GA4_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json

# Mixpanel
MIXPANEL_PROJECT_TOKEN=your_mixpanel_project_token
MIXPANEL_API_KEY=your_mixpanel_api_key
MIXPANEL_API_SECRET=your_mixpanel_api_secret
MIXPANEL_EU_RESIDENCY=false

# Security & Compliance
JWT_SECRET=your_jwt_secret_key_min_32_chars
JWT_EXPIRY=7d
ENCRYPTION_KEY=your_32_byte_encryption_key_base64
GDPR_DATA_RETENTION_DAYS=365
GDPR_ANONYMIZE_AFTER_DAYS=730
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Analytics Configuration
ATTRIBUTION_LOOKBACK_WINDOW_DAYS=30
ATTRIBUTION_MODEL_UPDATE_INTERVAL_HOURS=6
REAL_TIME_PROCESSING_BATCH_SIZE=1000
REAL_TIME_PROCESSING_INTERVAL_MS=100
HISTORICAL_PARTITION_INTERVAL=monthly

# Monitoring & Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=marketing-analytics
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true
TRACING_ENABLED=true

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_PATH=/api/v1
API_CORS_ORIGIN=*
API_BODY_LIMIT=10mb

# Machine Learning
TF_BACKEND=tensorflow
ML_MODEL_PATH=/models/attribution
ML_TRAINING_ENABLED=true
ML_TRAINING_SCHEDULE=0 2 * * *