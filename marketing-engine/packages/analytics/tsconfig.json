{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@marketing/*": ["packages/*/src"],
      "@services/*": ["services/*/src"],
      "@integrations/*": ["integrations/*/src"],
      "@shared/*": ["packages/shared/src/*"],
      "@types/*": ["types/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/core" },
    { "path": "./packages/analytics" },
    { "path": "./packages/channels" },
    { "path": "./services/api-gateway" },
    { "path": "./services/event-bus" },
    { "path": "./services/scheduler" },
    { "path": "./integrations/email" },
    { "path": "./integrations/social" },
    { "path": "./integrations/ads" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist", "coverage", "**/*.spec.ts", "**/*.test.ts"]
}