{
  "name": "@warehouse-network/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:test": "prisma migrate deploy --preview-feature",
    "db:seed": "prisma db seed",
    "db:seed:test": "NODE_ENV=test prisma db seed",
    "db:studio": "prisma studio",
    "analyze": "cross-env ANALYZE=true npm run build",
    "docker:build": "docker build -t warehouse-frontend .",
    "docker:run": "docker run -p 3000:3000 warehouse-frontend",
    "clean": "rm -rf .next dist node_modules/.cache",
    "security:scan": "eslint . --ext .ts,.tsx -c ../../.eslintrc.json --rule 'security/detect-object-injection: error'"
