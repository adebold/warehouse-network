// Warehouse Real Estate Listing Platform Schema
// This is the new schema for warehouse/industrial space listings

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Core Models

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole        @default(USER)
  accounts      Account[]
  sessions      Session[]
  customer      Customer?       @relation(fields: [customerId], references: [id])
  customerId    String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  // Listings they manage (for new warehouse listing platform)
  listings      Listing[]
  inquiries     Inquiry[]
}

enum UserRole {
  SUPER_ADMIN
  WAREHOUSE_STAFF  
  FINANCE_ADMIN
  CUSTOMER_ADMIN
  CUSTOMER_USER
  OPERATOR_ADMIN
  USER
  BROKER
  LANDLORD
  ADMIN
}

// Location & Geographic Data
model Listing {
  id                    String            @id @default(cuid())
  title                 String
  description           String?           @db.Text
  status                ListingStatus     @default(AVAILABLE)
  
  // Location Data
  address               String
  city                  String
  postalCode            String
  latitude              Float?
  longitude             Float?
  distanceToHighway     Float?            // km to nearest major highway
  
  // Physical Specifications
  totalSqFt             Int
  minDivisibleSqFt      Int?              // minimum divisible space
  clearHeight           Float             // in feet
  columnSpacing         String?           // e.g., "24x40", optional in v1
  heavyLoadCapable      Boolean           @default(false)
  floorLoadPsf          Int?              // pounds per square foot
  
  // Loading & Access
  dockDoors             DockDoor[]
  driveInDoors          DriveInDoor[]
  
  // Zoning & Use
  zoningCategory        String            // e.g., "EL", "E", "EO" for Ontario
  permittedUses         PermittedUse[]
  
  // Parking & Yard
  employeeParkingSpaces Int               @default(0)
  trailerParkingSpaces  Int               @default(0)
  hasYardStorage        Boolean           @default(false)
  yardStorageArea       Float?            // square feet
  
  // Lease & Pricing
  leaseType             LeaseType
  askingRentPsf         Float             // per square foot annually
  estimatedCamPsf       Float?            // Common Area Maintenance
  minLeaseTerm          Int               // months
  maxLeaseTerm          Int?              // months, null = no max
  availabilityDate      DateTime
  
  // Media & Documentation
  photos                Photo[]
  floorPlan             String?           // URL to floor plan
  virtualTourUrl        String?
  
  // Contacts
  landlordContact       Contact?          @relation("LandlordContact", fields: [landlordContactId], references: [id])
  landlordContactId     String?
  brokerContact         Contact?          @relation("BrokerContact", fields: [brokerContactId], references: [id])
  brokerContactId       String?
  
  // Metadata
  createdBy             User              @relation(fields: [createdById], references: [id])
  createdById           String
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  
  // Inquiries
  inquiries             Inquiry[]

  @@index([city])
  @@index([status])
  @@index([totalSqFt])
  @@index([askingRentPsf])
  @@index([latitude, longitude])
}

enum ListingStatus {
  AVAILABLE
  UNDER_NEGOTIATION
  LEASED
  WITHDRAWN
}

enum LeaseType {
  GROSS
  NET
  NNN              // Triple Net
  MODIFIED_GROSS
}

// Loading Infrastructure
model DockDoor {
  id          String  @id @default(cuid())
  listing     Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId   String
  count       Int     @default(1)
  dockHeight  Float   // feet from ground
  description String? // e.g., "hydraulic leveler", "dock seal"
}

model DriveInDoor {
  id          String  @id @default(cuid())
  listing     Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId   String
  count       Int     @default(1)
  width       Float   // feet
  height      Float   // feet
  description String? // e.g., "overhead door", "grade level"
}

// Use Classifications
model PermittedUse {
  id          String  @id @default(cuid())
  listing     Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId   String
  useType     UseType
  description String?
}

enum UseType {
  STORAGE
  LIGHT_MANUFACTURING
  HEAVY_MANUFACTURING
  DISTRIBUTION
  FULFILLMENT
  COLD_STORAGE
  FOOD_PROCESSING
  AUTOMOTIVE
  RETAIL_DISTRIBUTION
}

// Contact Information
model Contact {
  id               String    @id @default(cuid())
  name             String
  title            String?
  company          String?
  email            String
  phone            String?
  mobile           String?
  
  // Relations
  landlordListings Listing[] @relation("LandlordContact")
  brokerListings   Listing[] @relation("BrokerContact")
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([email])
}

// Media
model Photo {
  id          String  @id @default(cuid())
  listing     Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
  listingId   String
  url         String
  alt         String?
  caption     String?
  order       Int     @default(0)
  isPrimary   Boolean @default(false)
  
  createdAt   DateTime @default(now())

  @@index([listingId, order])
}

// User Interactions
model Inquiry {
  id          String        @id @default(cuid())
  listing     Listing       @relation(fields: [listingId], references: [id])
  listingId   String
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  
  companyName String?
  spaceNeeded Int?          // square feet
  message     String        @db.Text
  status      InquiryStatus @default(NEW)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([listingId])
  @@index([userId])
  @@index([status])
}

enum InquiryStatus {
  NEW
  CONTACTED
  IN_PROGRESS
  CLOSED
}

// Authentication Models (keeping minimal NextAuth support)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Legacy models for compatibility - will be migrated to warehouse listings
model Invitation {
  id          String   @id @default(cuid())
  email       String
  token       String   @unique
  expires     DateTime
  role        UserRole
  createdAt   DateTime @default(now())
}

model Platform {
  id        String      @id @default(cuid())
  name      String
  operators Operator[]
}

model Operator {
  id                    String      @id @default(cuid())
  legalName             String
  platform              Platform    @relation(fields: [platformId], references: [id])
  platformId            String
  registrationDetails   String
  primaryContact        String
  operatingRegions      String
  warehouseCount        Int
  goodsCategories       String
  insuranceAcknowledged Boolean
  termsAccepted         Boolean   @default(false)
  termsAcceptedAt       DateTime?
  status                OperatorStatus @default(APPLIED)
  warehouses            Warehouse[]
  disputes              Dispute[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

enum OperatorStatus {
  APPLIED
  APPROVED
  REJECTED
  ACTIVE_PENDING_WAREHOUSE
  ACTIVE
  SUSPENDED
  OFFBOARDING
}

model Warehouse {
  id                      String    @id @default(cuid())
  name                    String
  address                 String
  operatingHours          String
  capacity                Int
  supportedGoods          String
  dockAccessInstructions  String
  status                  WarehouseStatus @default(INACTIVE)
  operator                Operator? @relation(fields: [operatorId], references: [id])
  operatorId              String?
  quotes                  Quote[]
  pricingRules            PricingRule[]
  skids                   Skid[]
  locations               Location[]
  releaseRequests         ReleaseRequest[]
  receivingOrders         ReceivingOrder[]
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
}

model PricingRule {
  id              String        @id @default(cuid())
  warehouse       Warehouse     @relation(fields: [warehouseId], references: [id])
  warehouseId     String
  chargeCategory  ChargeCategory @relation(fields: [chargeCategoryId], references: [id])
  chargeCategoryId String
  price           Float
  currency        String
}

model ReceivingOrder {
  id                String    @id @default(cuid())
  reference         String    @unique
  warehouse         Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId       String
  customer          Customer  @relation(fields: [customerId], references: [id])
  customerId        String
  carrier           String?
  expectedSkidCount Int?
  notes             String?
  skids             Skid[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

enum WarehouseStatus {
  INACTIVE
  READY_FOR_MARKETPLACE
  ACTIVE
  SUSPENDED
}

model Skid {
  id                      String          @id @default(cuid())
  skidCode                String          @unique
  customer                Customer        @relation(fields: [customerId], references: [id])
  customerId              String
  warehouse               Warehouse       @relation(fields: [warehouseId], references: [id])
  warehouseId             String
  status                  SkidStatus
  receivingOrder          ReceivingOrder? @relation(fields: [receivingOrderId], references: [id])
  receivingOrderId        String?
  footprint               String?
  specialHandlingNotes    String?
  location                Location?       @relation(fields: [locationId], references: [id])
  locationId              String?
  releaseRequests         SkidsOnReleaseRequests[]
  chargeLines             ChargeLine[]
  disputes                SkidsOnDisputes[]
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
}

model SkidsOnReleaseRequests {
  skid            Skid            @relation(fields: [skidId], references: [id])
  skidId          String
  releaseRequest  ReleaseRequest  @relation(fields: [releaseRequestId], references: [id])
  releaseRequestId String

  @@id([skidId, releaseRequestId])
}

model ChargeLine {
  id              String        @id @default(cuid())
  skid            Skid          @relation(fields: [skidId], references: [id])
  skidId          String
  chargeCategory  ChargeCategory @relation(fields: [chargeCategoryId], references: [id])
  chargeCategoryId String
  amount          Float
  currency        String
  timestamp       DateTime      @default(now())
}

model SkidsOnDisputes {
  skid          Skid          @relation(fields: [skidId], references: [id])
  skidId        String
  dispute       Dispute       @relation(fields: [disputeId], references: [id])
  disputeId     String

  @@id([skidId, disputeId])
}

enum SkidStatus {
  RECEIVED
  PUTAWAY
  STORED
  PICKING
  READY
  RELEASED
  SHIPPED
  HOLD
}

model Customer {
  id              String @id @default(cuid())
  name            String
  skids           Skid[]
  users           User[]
  releaseRequests ReleaseRequest[]
  rfqs            RFQ[]
  receivingOrders ReceivingOrder[]
  disputes        Dispute[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model RFQ {
  id                    String    @id @default(cuid())
  customer              Customer  @relation(fields: [customerId], references: [id])
  customerId            String
  preferredWarehouseIds String[]
  estimatedSkidCount    Int
  footprintType         String
  expectedInboundDate   DateTime
  expectedDuration      String?
  specialHandlingNotes  String?
  status                RFQStatus @default(PENDING)
  quotes                Quote[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

enum RFQStatus {
  PENDING
  QUOTED
  REJECTED
}

model Quote {
  id                String          @id @default(cuid())
  rfq               RFQ             @relation(fields: [rfqId], references: [id])
  rfqId             String
  warehouse         Warehouse       @relation(fields: [warehouseId], references: [id])
  warehouseId       String
  items             QuoteItem[]
  currency          String
  assumptions       String?
  guaranteedCharges Boolean         @default(false)
  depositAmount     Float
  version           Int             @default(1)
  status            QuoteStatus     @default(PENDING)
  expiryDate        DateTime
  accrualStartRule  AccrualStartRule @default(ON_RECEIPT)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

enum AccrualStartRule {
  ON_RECEIPT
  FIXED_DATE
}

enum QuoteStatus {
  PENDING
  ACCEPTED
  REJECTED
  DEPOSIT_PAID
}

model QuoteItem {
  id             String        @id @default(cuid())
  quote          Quote         @relation(fields: [quoteId], references: [id])
  quoteId        String
  chargeCategory ChargeCategory @relation(fields: [chargeCategoryId], references: [id])
  chargeCategoryId String
  unitPrice      Float
  quantity       Int
  description    String?
  createdAt      DateTime      @default(now())
}

model Dispute {
  id            String    @id @default(cuid())
  customer      Customer  @relation(fields: [customerId], references: [id])
  customerId    String
  operator      Operator  @relation(fields: [operatorId], references: [id])
  operatorId    String
  type          DisputeType
  status        DisputeStatus @default(OPEN)
  description   String    @db.Text
  evidence      Json?
  resolution    String?   @db.Text
  submittedAt   DateTime  @default(now())
  resolvedAt    DateTime?
  skids         SkidsOnDisputes[]
}

enum DisputeType {
  DAMAGED_GOODS
  MISSING_GOODS
  INCORRECT_CHARGES
  SLA_BREACHES
  MISDECLARED_GOODS
}

enum DisputeStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  ESCALATED
}

model ReleaseRequest {
  id                  String    @id @default(cuid())
  requestedAt         DateTime  @default(now())
  carrierDetails      String
  status              ReleaseRequestStatus @default(PENDING)
  customer            Customer  @relation(fields: [customerId], references: [id])
  customerId          String
  warehouse           Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId         String
  skids               SkidsOnReleaseRequests[]
}

enum ReleaseRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model Location {
  id          String    @id @default(cuid())
  name        String
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])
  warehouseId String
  skids       Skid[]
  createdAt   DateTime  @default(now())
}

model CityPage {
  id            String    @id @default(cuid())
  slug          String    @unique
  city          String
  region        String?
  h1            String
  introContent  String    @db.Text
  isActive      Boolean   @default(false)
  version       Int       @default(1)
  lastEditedAt  DateTime  @default(now())
}

model ChargeCategory {
  id           String @id @default(cuid())
  name         String @unique
  pricingRules PricingRule[]
  quoteItems   QuoteItem[]
  chargeLines  ChargeLine[]
}

model Referral {
  id           String      @id @default(cuid())
  code         String      @unique
  referrerId   String
  refereeId    String?
  referralType ReferralType
  source       String      @default("link")
  status       ReferralStatus @default(PENDING)
  qualifiedAt  DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([code])
  @@index([referrerId])
}

enum ReferralStatus {
  PENDING
  USED
  EXPIRED
  QUALIFIED
}

enum ReferralType {
  CUSTOMER_TO_CUSTOMER
  OPERATOR_TO_OPERATOR
  OPERATOR_TO_CUSTOMER
}