# Claude Agent Tracker Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=0.0.0.0

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=claude_agent_tracker
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_SIZE=20
DB_TIMEOUT=30000

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=cat:
REDIS_TTL=3600

# JWT Authentication
JWT_SECRET=your_very_secure_jwt_secret_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# BCrypt Security
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# OpenTelemetry Tracing
OTEL_ENABLED=false
OTEL_SERVICE_NAME=claude-agent-tracker
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_HEADERS=

# Prometheus Metrics
PROM_ENABLED=true
PROM_PORT=9090
PROM_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_FILES=7
LOG_MAX_SIZE=10m

# Agent Configuration
MAX_AGENTS=10
AGENT_TIMEOUT=300000
HEALTH_CHECK_INTERVAL=30000
CLEANUP_INTERVAL=60000
MAX_RETRIES=3
SPAWN_TIMEOUT=10000

# Git Integration
GIT_ENABLED=true
GIT_AUTO_COMMIT=false
GIT_BRANCH=main
GIT_REMOTE=origin
GIT_AUTHOR_NAME=Claude Agent Tracker
GIT_AUTHOR_EMAIL=agent-tracker@claude.ai
GIT_COMMIT_MESSAGE=Auto-commit by Claude Agent Tracker