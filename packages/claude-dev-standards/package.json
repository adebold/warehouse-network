    "prepublishOnly": "npm run lint && npm run test",
    "postinstall": "node lib/postinstall.js"
  },
  "keywords": [
    "claude",
    "development-standards",
    "production",
    "validation",
    "linting",
    "ci-cd",
    "automation",
    "best-practices"
  ],
  "author": "Claude Dev Standards Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/claude-dev-standards.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "semver": "^7.5.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "files": [
    "bin",
    "lib",
    "templates",
    "README.md",
    "LICENSE"
