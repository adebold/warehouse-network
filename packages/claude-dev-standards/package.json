{
  "name": "claude-dev-standards",
  "version": "1.0.0",
  "description": "Production-ready development standards for Claude Code projects with automated validation and setup",
  "main": "lib/index.js",
  "bin": {
    "claude-dev-standards": "bin/claude-dev-standards",
    "cds": "bin/claude-dev-standards"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/**/*.js bin/**",
