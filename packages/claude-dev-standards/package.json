{
  "name": "@warehouse-network/claude-dev-standards",
  "version": "1.0.0",
  "description": "Enterprise development standards enforcement with automated security validation, RBAC implementation, and production-grade CI/CD pipelines",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-dev-standards": "bin/claude-dev-standards",
    "cds": "bin/claude-dev-standards"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "cp -r templates dist/ && cp -r lib/templates dist/lib/ 2>/dev/null || true",
    "dev": "npm run build:watch",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testNamePattern=security",
    "lint": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "node dist/cli/security-scan.js",
    "validate:project": "node dist/cli/validate.js",
    "setup:enterprise": "node dist/cli/setup-enterprise.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build",
    "postinstall": "node dist/postinstall.js || echo 'Postinstall completed'"
  },
  "keywords": [
    "claude",
    "development-standards",
    "production",
    "validation",
    "linting",
    "ci-cd",
    "automation",
    "best-practices",
    "security",
    "authentication",
    "rbac",
    "audit-logging",
    "vulnerability-scanning"
  ],
  "author": "Claude Dev Standards Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warehouse-network/platform.git",
    "directory": "packages/claude-dev-standards"
  },
  "bugs": {
    "url": "https://github.com/warehouse-network/platform/issues"
  },
  "homepage": "https://github.com/warehouse-network/platform/tree/main/packages/claude-dev-standards#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.js",
      "require": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
