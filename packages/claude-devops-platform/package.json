{
  "name": "@claude-ai/devops-platform",
  "version": "1.0.0",
  "description": "Production-ready DevOps automation platform with Kubernetes, Docker, CI/CD, and monitoring",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-devops": "./bin/claude-devops.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t claude-devops .",
    "k8s:deploy": "kubectl apply -f k8s/",
    "terraform:init": "cd terraform && terraform init",
    "terraform:plan": "cd terraform && terraform plan",
    "terraform:apply": "cd terraform && terraform apply"
  },
  "keywords": [
    "devops",
    "kubernetes",
    "docker",
    "ci/cd",
    "terraform",
    "monitoring",
    "automation"
  ],
  "author": "Claude AI",
  "license": "MIT",
  "dependencies": {
    "@claude-ai/code-quality": "workspace:*",
    "@kubernetes/client-node": "^0.20.0",
