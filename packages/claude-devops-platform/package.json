    "cors": "^2.8.5",
    "cron": "3.5.0",
    "deep-object-diff": "1.1.9",
    "dockerode": "^4.0.2",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "express": "^4.18.2",
    "fs-extra": "11.3.3",
    "helmet": "^7.1.0",
    "inquirer": "^9.2.12",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^9.0.3",
    "mssql": "12.2.0",
    "mysql2": "3.16.0",
