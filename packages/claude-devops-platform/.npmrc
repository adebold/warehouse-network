# NPM Configuration for Publishing

# Registry configuration
@claude-platform:registry=https://registry.npmjs.org/
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Package settings
tag-version-prefix=""
message="chore(release): %s"

# Security settings
audit-level=high
fund=false

# Performance settings
prefer-offline=true
cache-min=3600

# Publishing settings
access=public
dry-run=false

# Workspace settings
workspaces-update=true
save-exact=false

# Git settings
git-tag-version=true
commit-hooks=true
sign-git-commit=true
sign-git-tag=true

# CI/CD settings
progress=false
loglevel=warn

# Package validation
engine-strict=true
save-prefix="^"

# Scoped packages configuration
@claude-platform:registry=https://registry.npmjs.org/
//registry.npmjs.org/:always-auth=true

# GitHub Packages fallback (optional)
# @claude-platform:registry=https://npm.pkg.github.com
# //npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}