{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"],
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/core/deployment-manager.ts",
    "src/core/monitoring-manager.ts", 
    "src/core/devops-engine.ts",
    "src/core/container-manager.ts",
    "src/utils/logger.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests/**/*"]
}