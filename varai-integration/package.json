{
  "name": "varai-platform",
  "version": "1.0.0",
  "description": "Enterprise security-first monorepo for AI applications",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/varai/platform.git"
  },
  "license": "PROPRIETARY",
  "author": "VARAi Inc.",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --all --parallel=3",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "type-check": "tsc --noEmit -p tsconfig.base.json",
    "clean": "nx reset && rm -rf node_modules dist .next",
    "fix:all": "tsx scripts/auto-fix.ts",
    "fix:imports": "eslint . --ext .ts,.tsx --fix --rule 'import/order: error' --rule 'unused-imports/no-unused-imports: error'",
    "fix:types": "tsc --noEmit || true && pnpm lint:fix",
    "security:check": "pnpm security:secrets && pnpm security:deps && pnpm security:sast",
    "security:full": "pnpm security:check && pnpm security:containers",
    "security:secrets": "gitleaks detect --source . --verbose --no-git",
    "security:deps": "snyk test --all-projects --severity-threshold=high",
    "security:sast": "semgrep scan --config=auto .",
    "security:containers": "docker images --format '{{.Repository}}:{{.Tag}}' | grep varai | xargs -I {} trivy image {}",
    "security:licenses": "license-checker --production --summary",
    "incident:revoke-sessions": "tsx scripts/incident-response.ts revoke-sessions",
    "incident:lock-account": "tsx scripts/incident-response.ts lock-account",
    "incident:circuit-breaker": "tsx scripts/incident-response.ts circuit-breaker",
    "incident:snapshot": "tsx scripts/incident-response.ts snapshot",
    "deploy:staging": "NODE_ENV=staging ./scripts/deploy.sh staging",
    "deploy:production": "NODE_ENV=production ./scripts/deploy.sh production",
    "db:migrate": "nx run database:migrate",
    "db:seed": "nx run database:seed",
    "db:backup": "./scripts/backup-db.sh",
    "db:restore": "./scripts/restore-db.sh",
    "secrets:rotate": "tsx scripts/rotate-secrets.ts",
    "secrets:audit": "tsx scripts/audit-secrets.ts",
    "compliance:report": "tsx scripts/generate-audit-report.ts",
    "compliance:review": "tsx scripts/access-review.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "./scripts/setup.sh",
    "reset": "pnpm clean && pnpm install && pnpm setup"
  },
  "devDependencies": {
    "@nx/devkit": "^18.0.0",
    "@nx/esbuild": "^18.0.0",
    "@nx/eslint": "^18.0.0",
    "@nx/jest": "^18.0.0",
    "@nx/js": "^18.0.0",
    "@nx/node": "^18.0.0",
    "@nx/react": "^18.0.0",
    "@nx/vite": "^18.0.0",
    "@nx/workspace": "^18.0.0",
    "@swc/core": "^1.3.100",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "jest": "^29.7.0",
    "glob": "^10.3.10",
    "nx": "^18.0.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4",
    "gitleaks": "^8.18.1",
    "license-checker": "^25.0.1",
    "semgrep": "^1.55.0",
    "snyk": "^1.1276.0"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "volta": {
    "node": "20.11.0",
    "pnpm": "8.15.0"
  }
}
