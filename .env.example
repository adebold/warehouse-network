# Database
DB_USER=warehouse
DB_PASSWORD=warehouse123
DB_NAME=warehouse_network
DATABASE_URL=postgresql://warehouse:warehouse123@localhost:5432/warehouse_network

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-hex-32

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cron Secrets
CRON_SECRET_ACCRUAL=generate-random-secret
CRON_SECRET_PAYOUTS=generate-random-secret
CRON_SECRET_SCORES=generate-random-secret

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# Email (development)
EMAIL_SERVER=smtp://localhost:1025
EMAIL_FROM=noreply@warehouse-network.local

# Monitoring (staging/prod)
GRAFANA_PASSWORD=admin
REPLICATION_PASSWORD=replication-secret

# Sentry (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# AWS S3 (for file uploads in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=warehouse-network-uploads

# Database Integrity & Memory Bank Configuration
LOG_LEVEL=info  # Options: debug, info, warning, error
MEMORY_BANK_RETENTION_DAYS=90  # How long to keep logs (default: 90 days)
MEMORY_BANK_MAX_SIZE_MB=1000   # Maximum size for log storage (default: 1GB)
MEMORY_BANK_ALERT_EMAIL=admin@example.com  # Email for critical alerts
MEMORY_BANK_CLEANUP_ENABLED=true  # Enable automatic log cleanup
MEMORY_BANK_CLEANUP_SCHEDULE="0 2 * * *"  # Cron schedule for cleanup (2 AM daily)

# Session Configuration (optional)
SESSION_ID=  # Track operations by session (auto-generated if not set)

# Alert Configuration
ALERT_ENABLED=true
ALERT_CHANNELS=email  # Comma-separated list: email, slack, webhook
ALERT_ERROR_THRESHOLD=0.05  # Alert if error rate exceeds 5%
ALERT_DRIFT_THRESHOLD=10    # Alert if more than 10 drifts detected
ALERT_WEBHOOK_URL=  # Webhook URL for alerts (if using webhook channel)
SLACK_WEBHOOK_URL=  # Slack webhook for alerts (if using slack channel)

# Performance Configuration
PERF_TRACKING_ENABLED=true
PERF_SLOW_QUERY_THRESHOLD=1000  # Log queries slower than 1000ms
PERF_MEMORY_WARNING_THRESHOLD=80  # Warn if memory usage exceeds 80%