# Warehouse Network Platform Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=warehouse_network
DB_USER=warehouse
DB_PASSWORD=warehouse123

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=redis-password

# Application Configuration
APP_PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-secret-key-change-in-production

# Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cron Jobs
CRON_SECRET_ACCRUAL=your-accrual-cron-secret
CRON_SECRET_PAYOUTS=your-payouts-cron-secret
CRON_SECRET_SCORES=your-scores-cron-secret

# Claude Platform Services
CLAUDE_AGENT_TRACKER_PORT=3001
CLAUDE_DEV_STANDARDS_PORT=3002
CLAUDE_DB_INTEGRITY_PORT=3003
CLAUDE_DEVOPS_PLATFORM_PORT=3004

# Monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000
GRAFANA_PASSWORD=admin

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
ENABLE_HELMET=true

# Enhanced Security Configuration
# Authentication Security
BCRYPT_ROUNDS=12
JWT_MAX_AGE=86400
SESSION_MAX_AGE=2592000

# Rate Limiting (Enhanced)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
PASSWORD_RESET_RATE_LIMIT_MAX=3

# CSRF Protection
CSRF_PROTECTION_ENABLED=true
CSRF_TOKEN_LENGTH=32
CSRF_COOKIE_NAME=_csrf
CSRF_HEADER_NAME=x-csrf-token
CSRF_TOKEN_TTL=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# Security Headers
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=900000

# Session Security
SESSION_COOKIE_NAME=__Secure-next-auth.session-token
SESSION_SAME_SITE=lax

# Production-Only (set in production environment)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id